                $('#priceDisplay').text(fastPrice);
             

            } else {
                var fastcheck = false;
                fastPrice = 0;
                //alert(fastPrice);
                $('#priceDisplay').text(fastPrice);
               
            }
           
            localStorage.setItem("forwardcheck", fastcheck);
            updateCombinedTotal();
        });

        $("#Continuebtn").click(function () {
           
            var seatdata = JSON.parse(localStorage.getItem("selectedIds"));
            var unitKey1 = JSON.parse(localStorage.getItem("selectedIds1"));
            var unitKey2 = JSON.parse(localStorage.getItem("selectedIds2"));
            var unitKey;
            if (unitKey2 && unitKey2.length > 0) {
                unitKey = unitKey1.concat(unitKey2);
            } else {
                unitKey = unitKey1;
            }
            // let mealcode1 = JSON.parse(localStorage.getItem("MealssrKeyCount"));
            // let mealcode2 = JSON.parse(localStorage.getItem("MealssrKeyCount2"));
            // var ssrKey = mealcode1 + "," + mealcode2;
            let mealcode1 = JSON.parse(localStorage.getItem("MealssrKeyCount"));
            let mealcode2 = JSON.parse(localStorage.getItem("MealssrKeyCount2"));
            var ssrKey;
            if (mealcode2 && mealcode2.length > 0) {
                ssrKey = mealcode1.concat(mealcode2);
            } else {
                ssrKey = mealcode1;
            }

            let BaggageSSrkey = JSON.parse(localStorage.getItem("BagssrKeyCount"));
            let Boolfastforward = localStorage.getItem("forwardcheck") || false;

            $.ajax({
                url: "/IndigoTripsell/PostUnitkey",
                type: "POST",
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: { unitKey: unitKey, ssrKey: ssrKey, BaggageSSrkey: BaggageSSrkey, Boolfastforward: Boolfastforward },
                success: function (data) {
                    window.location.href = '/IndigoPaymentGateway/IndigoPayment';
                },
                error: function (err) {
                    console.error(err);
                }
            });
        });





