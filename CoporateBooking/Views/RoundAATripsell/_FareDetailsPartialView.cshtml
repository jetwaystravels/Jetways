        int toatlinftbasefareL = 0;
        int toatlinftbasefareR = 0;
        int totalBaseFareamount = 0;
        int basefaretax = 0;
        int basefaretaxL = 0;
        int basefaretaxR = 0;
        int totaltax = 0;
        int totaltaxL = 0;
        int totaltaxR = 0;
        int peradtamounsegment = 0;
        int perchdamounsegment = 0;
        for (int a = 0; a < Model.passeengerlistRT.Count; a++)
        {
            adtcount = 0;
            chdcount = 0;
            infcount = 0;
            peradtamount = 0;
            perchdtamount = 0;
            <div class="col-auto">
                @{
                    int passengercountbase = @Model.passeengerlistRT[a].passengers.Count;
                    int segmentcount = @Model.passeengerlistRT[a].journeys[0].segments.Count;
                }

                @{
                    if (Model.passeengerlistRT[a].journeys[0].segments[0].identifier.carrierCode.Equals("UK") || Model.passeengerlistRT[a].journeys[0].segments[0].identifier.carrierCode.Equals("AI") || Model.passeengerlistRT[a].journeys[0].segments[0].identifier.carrierCode.Equals("H1"))
                    {
                        @for (int j = 0; j < segmentcount; j++)
                        {
                            for (int i = 0; i < Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares.Count; i++)
                            {
                                if (Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[i].passengerType == "ADT")
                                {
                                    peradtamounsegment = @Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[i].basicAmount;
                                    peradtamount += peradtamounsegment;
                                }
                                else if (Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[i].passengerType == "CHD")
                                {
                                    perchdamounsegment = @Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[i].basicAmount;
                                    perchdtamount += perchdamounsegment;
                                }
                                else if (Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[i].passengerType == "INF" || Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[i].passengerType == "INFT")
                                {
                                    inftbasefare = @Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[i].basicAmount;

                                }
                            }
                        }



                    }
                    else
                    {
                        @for (int j = 0; j < segmentcount; j++)
                        {
                            if (Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares.Count > 0)
                            {
                                peradtamounsegment = @Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[0].serviceCharges[0].amount;
                                peradtamount += peradtamounsegment;
                            }
                            if (@Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares.Count > 1)
                            {
                                perchdamounsegment = @Model.passeengerlistRT[a].journeys[0].segments[j].fares[0].passengerFares[1].serviceCharges[0].amount;
                                perchdtamount += perchdamounsegment;
                            }


                        }
                    }
                }




                @for (int i = 0; i < passengercountbase; i++)
                {
                    var passengertypecount = @Model.passeengerlistRT[a].passengers[i].passengerTypeCode;
                    var child = "";
                    var infant = "";
                    if (passengertypecount == "ADT")
                    {
                        adtcount = adtcount + 1;
                        adtamount = peradtamount * adtcount;
                    }
                    else if (passengertypecount == "CHD")
                    {
                        chdcount = chdcount + 1;
                        chdtamount = perchdtamount * chdcount;
                    }
                    else if (passengertypecount == "INFT" || passengertypecount == "INF")
                    {
                        infcount = infcount + 1;
                    }

                }

                @{
                    if (@Model.passeengerlistItanary != null)
                    {
                        inftbasefare = Model.passeengerlistItanary.inftbasefare;
                    }

                    toatlinftbasefare = infcount * inftbasefare;
                    basefare = (peradtamount * adtcount) + (perchdtamount * chdcount) + (toatlinftbasefare);

                    basefaretax = @Model.passeengerlistRT[a].basefaretax;
                    if (@Model.passeengerlistRT[a].journeys[0].Airlinename.ToLower()=="spicejet")
                    {
                        totaltax = @Model.passeengerlistRT[a].basefaretax + @Model.passeengerlistItanary.infttax;
                    }
                    else
                    {
                        totaltax = @Model.passeengerlistRT[a].basefaretax;
                    }


                    if (a == 1)
                    {
                        basefareR = basefare;
                        peradtamountR = peradtamount;
                        perchdtamountR = perchdtamount;
                        inftbasefareR = inftbasefare;
                        adtamountR = adtamount;
                        chdtamountR = chdtamount;
                        toatlinftbasefareR = toatlinftbasefare;
                        basefaretaxR = basefaretax;
                        totaltaxR = totaltax;
                    }
                    else
                    {
                        basefareL = basefare;
                        peradtamountL = peradtamount;
                        perchdtamountL = perchdtamount;
                        inftbasefareL = inftbasefare;
                        adtamountL = adtamount;
                        chdtamountL = chdtamount;
                        toatlinftbasefareL = toatlinftbasefare;
                        basefaretaxL = basefaretax;
                        totaltaxL = totaltax;
                    }
                }

            </div>

        }
        basefare = basefareL + basefareR;
        peradtamount = peradtamountL + peradtamountR;
        perchdtamount = perchdtamountL + perchdtamountR;
        inftbasefare = inftbasefareL + inftbasefareR;
        adtamount = adtamountL + adtamountR;
        chdtamount = chdtamountL + chdtamountR;
        toatlinftbasefare = toatlinftbasefareL + toatlinftbasefareR;
        basefaretax = basefaretaxL + basefaretaxR;
        totaltax = totaltaxL + totaltaxR;
    }
