<style>
    /* Styles for modal box and overlay */
    .modalTrip {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 50%;
        width: 60%;
        height: 80%;
        top: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 8px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);
    }

    .overlayTrip {
        display: none;
        position: fixed;
        z-index: 9998;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .tripmodal {
        background: #366480;
        padding: 6px;
    }

        .tripmodal h4 {
            color: #fff;
        }

        .tripmodal button {
            color: #fff;
        }



    /* Styles for tabs */
    .tab {
        display: none;
    }

    .active {
        display: block;
    }

    /* Styles for tab buttons */
    .tab-btn {
        cursor: pointer;
        padding: 10px 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-right: 10px;
    }

        .tab-btn.active {
            background-color: #ccd6dd; /* Change background color for active tab */
        }

    .tooltipF {
        position: relative;
        display: inline-block;
    }

        .tooltipF .tooltiptext {
            visibility: hidden;
            width: 220px;
            background-color: #366480;
            color: #fff;
            text-align: left;
            border-radius: 2px;
            padding: 6px;
            position: absolute;
            z-index: 1;
            top: 0;
            left: 100%;
            font-size: 12px;
            margin-left: 6px; /* Adjust as needed */
        }

        .tooltipF:hover .tooltiptext {
            visibility: visible;
        }

    table {
        border-collapse: collapse;
    }

    td,
    th {
        border: 1px solid black;
        padding: 10px 20px;
    }

    .fligtbox {
        margin: 4px 15px;
        border: 1px solid #366480;
    }

    .firstdiv {
        background-color: #edcbcb;
        margin: 15px;
        padding: 8px;
    }

    .airliname {
        border-radius: 20px;
        margin-left: 8px;
        padding: 7px 12px;
        font-size: 13px;
        border: 1px solid #2f647e;
        font-weight: 700;
    }

</style>


<script>
    $(document).ready(function () {
        // Open modal box
        $("#openModal_0").click(function () {
            $("#modal, #overlay").fadeIn();
            $("body").css("overflow", "hidden");
            //$("#tabContent1").show();
        });

        // Close modal box
        $("#closeModal, #overlay").click(function () {
            $("#modal, #overlay").fadeOut();
            $("body").css("overflow", "auto");
        });



        $("#tabContent1").addClass("active");


        $(".tab-btn").click(function () {

            var tabId = $(this).attr("id").replace("tabBtn", "");


            $(".tab").removeClass("active");
            $(".tab-btn").removeClass("active");


            $("#tabContent" + tabId).addClass("active");
            $(this).addClass("active");
        });

    });
</script>

