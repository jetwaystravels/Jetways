<style>
    /* Styles for modal box and overlay */
    .modalTrip {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 50%;
        width: 60%;
        height: 80%;
        top: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 8px;
        border-radius: 5px;
        box-shadow: 0px 0px 10px 0px rgba(0,0,0,0.5);
    }

    .overlayTrip {
        display: none;
        position: fixed;
        z-index: 9998;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
    }

    .tripmodal {
        background: #366480;
        padding: 6px;
    }

        .tripmodal h4 {
            color: #fff;
        }

        .tripmodal button {
            color: #fff;
        }



    /* Styles for tabs */
    .tab {
        display: none;
    }

    /* Styles for active tab */
    .active {
        display: block;
    }

    /* Styles for tab buttons */
    .tab-btn {
        cursor: pointer;
        padding: 10px 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-right: 10px;
    }

        .tab-btn.active {
            background-color: #ccd6dd; /* Change background color for active tab */
        }

    .tooltipF {
        position: relative;
        display: inline-block;
    }

        .tooltipF .tooltiptext {
            visibility: hidden;
            width: 220px;
            background-color: #366480;
            color: #fff;
            text-align: left;
            border-radius: 2px;
            padding: 6px;
            position: absolute;
            z-index: 1;
            top: 0;
            left: 100%;
            font-size: 12px;
            margin-left: 6px; /* Adjust as needed */
        }

        .tooltipF:hover .tooltiptext {
            visibility: visible;
        }

    table {
        border-collapse: collapse;
    }

    td,
    th {
        border: 1px solid black;
        padding: 10px 20px;
    }

    .fligtbox {
        margin: 4px 15px;
        border: 1px solid #366480;
    }

    .firstdiv {
        background-color: #edcbcb;
        margin: 15px;
        padding: 8px;
