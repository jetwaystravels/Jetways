                                            <th rowspan="2" class="align-middle">mobile  Number</th>
                                            <th rowspan="2" class="align-middle">Ticket Number</th>
                                            <th rowspan="2" class="align-middle">Status</th>
                                            <th rowspan="2" class="align-middle barcode">Bar code</th>
                                        </tr>
