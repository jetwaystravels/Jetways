<script>
    /*********seatmap_tab_select_function_ServiceRequest_PartialView_Page***********/
    $(document).ready(function () {
        // //---------------------------
        $('.dropdown-btn').click(function (e) {
            e.stopPropagation();
            $(this).next('.dropdown-options').toggle();
            let $dropdown = $(this).closest('.custom-dropdown.servc-bordr');
            $dropdown.find('.dropdown-btn i').addClass('fas fa-chevron-down');

        });

        $(document).click(function (e) {
            if (!$(e.target).closest('.custom-dropdown.servc-bordr').length) {
                $('.dropdown-options').hide();
            }

            if (!$(e.target).closest('.custom-dropdown.servc-bordrCon').length) {
                $('.dropdown-options').hide();
            }
        });


        $('.dropdown-option').hover(function () {


            let $dropdown = $(this).closest('.custom-dropdown.servc-bordr');

            if ($dropdown.length === 0) {
                $dropdown = $(this).closest('.custom-dropdown.servc-bordrCon');
            }


            // const $dropdown = $(this).closest('.custom-dropdown.servc-bordr'); // Find the closest dropdown container
            const $imagePreview = $dropdown.next('.mealImagePreview');


            const dropdownIndex = $dropdown.hasClass('servc-bordr') ? $dropdown.index('.custom-dropdown.servc-bordr') : $dropdown.index('.custom-dropdown.servc-bordrCon');

            // Find the image preview based on the dropdown index
            // const $imagePreview = $dropdown.next('.mealImagePreview').eq(dropdownIndex);

            var imageUrl = $(this).data('img');
            if (imageUrl) {

                // $('#mealImagePreview').attr('src', imageUrl).css({
                $imagePreview.attr('src', imageUrl).css({
                    display: 'block',
                    // top: $(this).offset().top - 55, // Adjust positioning
                    // left: $(this).offset().left + 160

                    top: $(this).offset().top - $dropdown.offset().top, // Adjusted relative position
                    left: $(this).outerWidth() + 2 // Positioned to the right of the option
                });
            }
        }, function () {

            let $dropdown = $(this).closest('.custom-dropdown.servc-bordr');
            if ($dropdown.length === 0) {
                $dropdown = $(this).closest('.custom-dropdown.servc-bordrCon');
            }

            // const $dropdown = $(this).closest('.custom-dropdown.servc-bordr');
            const $imagePreview = $dropdown.next('.mealImagePreview');
            $imagePreview.hide();


            // $('#mealImagePreview').hide();
        });

        let selectedMeals = [];
        var selectedMealsCon = [];

        let totalPriceServcBordr = 0;
        let totalPriceServcBordrCon = 0;

        $('.dropdown-option').click(function () {
            debugger;

            let $dropdown = $(this).closest('.custom-dropdown.servc-bordr');
            if ($dropdown.length === 0) {
                $dropdown = $(this).closest('.custom-dropdown.servc-bordrCon');
            }

            const selectedOptionText = $(this).text();
            const imageUrl = $(this).data('img');
            const selectedValue = $(this).data('value');

            if (selectedValue === undefined) { }

            $dropdown.find('.dropdown-btn').text(selectedOptionText);
          

            const dropdownIndex = $dropdown.hasClass('servc-bordr') ? $dropdown.index('.custom-dropdown.servc-bordr') : $dropdown.index('.custom-dropdown.servc-bordrCon');

            if (selectedValue) {
                debugger;
                const priceValue = selectedValue.split('_');
                const mealPrice = parseFloat(priceValue[1]);

                if ($dropdown.hasClass('servc-bordr')) {
                    if (selectedMeals[dropdownIndex] != null) {
                        const previousValue = selectedMeals[dropdownIndex];
                        const previousPrice = parseFloat(previousValue.split('_')[1]);
                        totalPriceServcBordr = totalPriceServcBordr - previousPrice + mealPrice;
                        selectedMeals[dropdownIndex] = selectedValue;
                    }
                    else {
                        selectedMeals.push(selectedValue);
                        totalPriceServcBordr += mealPrice;
                    }
                }
                else {
                    if (selectedMealsCon[dropdownIndex] != null) {
                        const previousValue = selectedMealsCon[dropdownIndex];
                        const previousPrice = parseFloat(previousValue.split('_')[1]);

                        totalPriceServcBordrCon = totalPriceServcBordrCon - previousPrice + mealPrice;
                        selectedMealsCon[dropdownIndex] = selectedValue;
                    }
                    else {
                        selectedMealsCon.push(selectedValue);
                        totalPriceServcBordrCon += mealPrice;
                    }

                }


            }
            if ($dropdown.hasClass('servc-bordr')) {
                localStorage.setItem("selectedMeals", JSON.stringify(selectedMeals));
                $('#AddMeal').text(totalPriceServcBordr.toFixed(2));
            }
            else {
                localStorage.setItem("selectedMealsCon", JSON.stringify(selectedMealsCon));
                $('#AddMeal2').text(totalPriceServcBordrCon.toFixed(2));
            }

            const combinedTotal = totalPriceServcBordr + totalPriceServcBordrCon;
            $('#AddMealTotal').text(combinedTotal.toFixed(2));

            $dropdown.find('.dropdown-options').hide();
            $dropdown.find('.dropdown-btn i').addClass('fas fa-chevron-down');
        });


        //---------------------

        $('.servc-bordr').change(function () {
            debugger;
            var selectedMeals = [];
            var totalPrice = 0;

            $('.servc-bordr').each(function () {
                debugger;
                var selectedValue = $(this).val();
                if (selectedValue) {
                    debugger;
                    var price_value = selectedValue.split('_');
                    var mealPrice = parseFloat(price_value[1]);

                    selectedMeals.push(selectedValue);
                    totalPrice += mealPrice;

                }

            });
            localStorage.setItem("selectedMeals", JSON.stringify(selectedMeals));
            $('#AddMeal').text(totalPrice.toFixed(2));
            updateCombinedTotal();


        });
        $('.select-option2 .servc-bordrCon').change((e) => {
            debugger;
            var selectedMealsCon = [];
            var totalPrice = 0;

            $('.servc-bordrCon').each(function () {
                debugger;
                var selectedValue = $(this).val();
                if (selectedValue) {
                    debugger;
                    var price_value = selectedValue.split('_');
                    var mealPrice = parseFloat(price_value[1]);

                    selectedMealsCon.push(selectedValue);
                    totalPrice += mealPrice;
                }
                localStorage.setItem("selectedMealsCon", JSON.stringify(selectedMealsCon));

            });

            $('#AddMeal2').text(totalPrice.toFixed(2));
            updateCombinedTotal();

        });

        //End :MealKey post
        $('.select-baggage .servc-bordrbaggage').change((e) => {
            debugger;
            var selectedBaggage = [];
            var baggagePrice = 0;

            $('.servc-bordrbaggage').each(function () {
                debugger;
                var selectedValueBaggage = $(this).val();
                if (selectedValueBaggage) {
                    debugger;
                    var price_value = selectedValueBaggage.split('_');
                    var BagPrice = parseFloat(price_value[1]);

                    selectedBaggage.push(selectedValueBaggage);
                    baggagePrice += BagPrice;
                }
                localStorage.setItem("BagssrKeyCount", JSON.stringify(selectedBaggage));

            });

            $('#AddBaggage').text(baggagePrice.toFixed(2));
            updateCombinedTotal();

        });


        //Wheel Chair
        $('.select-others .servc-bordrwheel').change((e) => {
            debugger;
            var selectedWheel = [];
            var wheelPrice = 0;

            $('.servc-bordrwheel').each(function () {
                debugger;
                var selectedValueWheel = $(this).val();
                if (selectedValueWheel) {
                    debugger;
                    var price_value = selectedValueWheel.split('_');
                    var WheelservicePrice = parseFloat(price_value[1]);

                    selectedWheel.push(selectedValueWheel);
                    wheelPrice += WheelservicePrice;
                }
                localStorage.setItem("otherbagKeyArray", JSON.stringify(selectedWheel));

            });

            $('#Addservice').text(wheelPrice.toFixed(2));
            updateCombinedTotal();

        });
        $('.select-others2 .servc-bordrwheelCon').change((e) => {
            debugger;
            var selectedWheelCon = [];
            var wheelPriceCon = 0;

            $('.servc-bordrwheelCon').each(function () {
                debugger;
                var selectedValueWheelCon = $(this).val();
                if (selectedValueWheelCon) {
                    debugger;
                    var price_value = selectedValueWheelCon.split('_');
                    var WheelservicePriceCon = parseFloat(price_value[1]);

                    selectedWheelCon.push(selectedValueWheelCon);
                    wheelPriceCon += WheelservicePriceCon;
                }
                localStorage.setItem("otherbagKeyArray2", JSON.stringify(selectedWheelCon));

            });

            $('#Addservice2').text(wheelPriceCon.toFixed(2));
            updateCombinedTotal();

        });

        $("#Continuebtn").click(function () {
            debugger;
            var seatdata = JSON.parse(localStorage.getItem("selectedIds"));
            var unitKey1 = JSON.parse(localStorage.getItem("selectedIds1"));
            var unitKey2 = JSON.parse(localStorage.getItem("selectedIds2"));
            var unitKey;
            if (unitKey2 && unitKey2.length > 0) {
                unitKey = unitKey1.concat(unitKey2);
            } else {
                unitKey = unitKey1;
            }

            let BaggageSSrkey = JSON.parse(localStorage.getItem("BagssrKeyCount"));
            let mealcode1 = JSON.parse(localStorage.getItem("selectedMeals")) || [];
            let mealcode2 = JSON.parse(localStorage.getItem("selectedMealsCon")) || [];
            var mealssrKey;

            if (mealcode2.length > 0) {
                mealssrKey = mealcode1.concat(mealcode2);
            } else {
                mealssrKey = mealcode1;
            }


            // let mealcode1 = JSON.parse(localStorage.getItem("selectedMeals"));
            // let mealcode2 = JSON.parse(localStorage.getItem("selectedMealsCon"));
            // var mealssrKey;
            // if (mealcode2 && mealcode2.length > 0) {
            //     mealssrKey = mealcode1.concat(mealcode2);
            // } else {
            //     mealssrKey = mealcode1;
            // }
            var WheelKeyArray1 = JSON.parse(localStorage.getItem("otherbagKeyArray")) || [];
            var WheelKeyArray2 = JSON.parse(localStorage.getItem("otherbagKeyArray2")) || [];
            var wheelSsrkey;
            if (Array.isArray(WheelKeyArray1) && Array.isArray(WheelKeyArray2)) {

                if (WheelKeyArray2.length > 0) {
                    wheelSsrkey = WheelKeyArray1.concat(WheelKeyArray2);
                } else {
                    wheelSsrkey = WheelKeyArray1;
                }
            } else {

                wheelSsrkey = [];
            }


            $.ajax({
                url: "/AATripsell/PostUnitkey",
                type: "POST",
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: { unitKey: unitKey, mealssrKey: mealssrKey, BaggageSSrkey: BaggageSSrkey, wheelSsrkey: wheelSsrkey },
                success: function (data) {
                    window.location.href = '/AirAsiaOneWayPayment/AirAsiaOneWayPaymentView';
                },
                error: function (err) {
                    console.error(err);
                }
            });
        });

        $(".exampleModalSeatdata").click(function (e) {

            e.preventDefault();
            $.ajax({
                url: '@Url.Action("PostSeatMapModaldataView", "AATripsell")',
                type: "GET",
                success: function (data) {
                    //console.log('POST request successful');
                    $('#rrrtexampleModal .modal-bodyy').html(data);
                    $('#rrrtexampleModal').modal('show');

                },
                error: function (error) {
                    console.log("Error fetching data:", error);
                }
            });
        });
        // $("#seattab1").addClass('active');
        $("#tabshow2").hide();
        $("#tabnew2").hide();
        $("#popbtnB").hide();
        $("#popbtnA").show();
        $("#seatTab1").click(function () {
            debugger;
            $("#tabshow1").show();
            $("#tabnew1").show();
            $("#tabnew2").hide();
            $("#popbtnB").hide();
            $("#popbtnA").show();
            $("#tabshow2").hide();
            $("#seatTab1").addClass('active');
            $("#seatTab2").removeClass('active');

        });

        $("#seatTab2").click(function () {
            debugger;
            $("#tabshow2").css("display", "block");
            $("#seatTab2").addClass('active');
            $("#seatTab1").removeClass('active');
            $("#popbtnA").hide();
            $("#tabshow1").hide();
            $("#tabnew1").hide();
            $("#tabnew2").show();
            $("#popbtnB").show();

        });

        $("#btnfocus").click(function () {
            alert("Do you want select connect seat");
            $("#seattab2").click();
        });

    });



</script>

