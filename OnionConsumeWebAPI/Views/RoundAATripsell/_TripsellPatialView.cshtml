@model DomainLayer.ViewModel.ViewModel
@{
    Layout = null;
    var data = Model;
}
<div class="flight-box-content rounded-4">
    <div class="py-10 px-30">
        <div class="row d-flex justify-between">
            <div class="col-auto">
                <div class="text-16 text-light-1 fw-700">Depart</div>
            </div>
            <div class="col-auto">
                <div class="text-14 text-light-1 fw-600">Total Time: 4h 35m</div>
            </div>
        </div>
    </div>
    @{
        for (int k = 0; k < Model.passeengerlistRT.Count; k++)
        {
            var AirLinename = Model.passeengerlistRT[k].journeys[0].Airlinename;
            // if (k == 0)
            //     AirLinename = "AirAsia";
            // else
            //     AirLinename = "Spicejet";

            if(k==1)
            {
                <div class="border-line-2"></div>
                <div class="py-10 px-30">
                    <div class="row d-flex justify-between">
                        <div class="col-auto">
                            <div class="text-16 text-light-1 fw-700">Return</div>
                        </div>
                        <div class="col-auto">
                            <div class="text-14 text-light-1 fw-600">Total Time: 4h 35m</div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                
            }

            foreach (var item in Model.passeengerlistRT[k].journeys)
            {
                for (int i = 0; i < item.segments.Count; i++)
                {

                    <div class="py-30 px-30 border-top-light">
                        <div class="row y-gap-10 justify-between">
                            <div class="col-auto">


                                @for (int j = 0; j < item.segments[i].legs.Count; j++)

                                {
                                    <div class="d-flex items-center mb-15">
                                        <div class="w-28 d-flex justify-center mr-15">
                                            @if (item.segments[i].identifier.carrierCode.Equals("SG"))
                                            {

                                                <img class="size-40" src="~/img/flight-logo-icon/SG.png" alt="image">
                                            }
                                            else
                                            {
                                                <img class="size-40" src="~/img/flight-logo-icon/1.webp" alt="image">
                                            }
                                            @* <img class="size-30" src="~/img/flight-logo-icon/1.webp" alt="image">*@
                                        </div>

                                        <div class="text-14 text-light-1"> @AirLinename @item.segments[i].identifier.identifier @item.segments[i].identifier.carrierCode</div>
                                    </div>

                                    <div class="relative z-0">
                                        <div class="border-line-2"></div>

                                        <div class="d-flex items-center">
                                            <div class="w-28 d-flex justify-center mr-15">
                                                <div class="size-10 border-light rounded-full bg-white"></div>
                                            </div>

                                            <div class="row">

                                                @{
                                                    var departuretime = @item.segments[i].legs[j].designator.departure;
                                                    string departuretimestr = departuretime.ToString();
                                                    var departuretimefinal = departuretimestr.Substring(11, 5);
                                                }

                                                <div class="col-auto">
                                                    <div class="lh-14 fw-500">@departuretimefinal</div>
                                                </div>
                                                <div class="col-auto">
                                                    <div class="lh-14 fw-500">@item.segments[i].legs[j].designator.origin <span class="text-13 ml-2 fw-600">( Tue, 13 Jun 2023<span class="text-13 text-light-1 ml-2"> Indira Gandhi, T-3 </span> )</span></div>

                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex items-center mt-15">
                                            <div class="w-28 d-flex justify-center mr-15">
                                                <img src="~/img/plane.svg" alt="image">
                                            </div>

                                            <div class="text-14 text-light-1"></div>
                                        </div>

                                        <div class="d-flex items-center mt-15">
                                            <div class="w-28 d-flex justify-center mr-15">
                                                <div class="size-10 border-light rounded-full bg-border"></div>
                                            </div>

                                            <div class="row">
                                                <div class="col-auto">
                                                    @{
                                                        var arrivaltime = @item.segments[i].legs[j].designator.arrival;
                                                        string arrivaltimestr = arrivaltime.ToString();
                                                        var arrivalfinal = arrivaltimestr.Substring(11, 5);

                                                    }

                                                    <div class="lh-14 fw-500">@arrivalfinal</div>
                                                </div>
                                                <div class="col-auto">
                                                    <div class="lh-14 fw-500">@item.segments[i].legs[j].designator.destination<span class="text-13 ml-2 fw-600">( Tue, 13 Jun 2023<span class="text-13 text-light-1 ml-2"> Sanganeer, T-2 </span> )</span></div>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                            <div class="col-auto text-right md:text-left">
                                <div class="text-13">Paid Meal</div>
                                <div class="text-13 mt-1">Economy</div>
                                <div class="text-13 mt-1">15 kgs</div>
                                <div class="text-13 mt-1"><a href="#">View Fare Rules</a></div>
                            </div>
                        </div>
                    </div>
                }
            }
        }

    }

