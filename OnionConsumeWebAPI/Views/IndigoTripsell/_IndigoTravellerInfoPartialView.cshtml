                                    </select>
                                    <select class="brd-none day-select" id="day_@inafantIdx" required>
                                        <option value="" disabled selected>Day</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        inafantIdx++;


                    }
                }
            </div>
        }
